{
    "compilerOptions": {
        "target": "es2020",
        "module": "commonjs",
        "lib": ["es2020"],
        "strict": true,
        "noImplicitAny": true,
        "importHelpers": true,
        "strictNullChecks": true,
        "types": ["node", "express"],
        "noUnusedLocals": true,
        "esModuleInterop": true
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules"]
}
